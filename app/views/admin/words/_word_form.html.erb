<%= form_for [:admin, @word] do |f| %>
  <%= render "shared/error_messages", object: @word %>

  <%= f.label :content %>
  <%= f.text_field :content, class: "form-control" %>

  <%= f.label :category %>
  <%= f.select :category_id,
    @categories.collect {|category| [category.name, category.id]},
    class: "form-control"  %>

  <%= f.fields_for :word_answers do |builder| %>
    <%= render "word_answer_fields", f: builder %>
  <% end %>
  <%= link_to_add_fields t("words.add_answer"), f, :word_answers %>

  <%= f.submit t("submit"), class: "btn btn-primary" %>
<% end %>
