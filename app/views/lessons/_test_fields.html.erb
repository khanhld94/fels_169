<li><%= f.object.word.content %></li>
<ul class="list-unstyled">
  <% f.object.word.word_answers.each do |word_answer| %>
    <li id="<%= f.object.word.id %>" onchange="set_number(this.id)">
      <label class="radio-inline">
        <%= f.radio_button :word_answer_id, word_answer.id %>
        <%= word_answer.content %>
      </label>
    </li>
  <% end %>
</ul>
