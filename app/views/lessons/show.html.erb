<%= provide :title, @lesson.category.name %>
<div class="dn-front-group">
  <div class="col-md-6">
    <b><%= t "categories.category" %></b> : <%= @lesson.category.name %>
  </div>
  <div class="col-md-7 col-md-offset-0 answer_show">
    <h2>
      <b><%= t "category.category" %></b> :
      <b><%= @lesson.category.name %></b>
    </h2>
    <hr>
    <div id="lesson_<%= @lesson.id %>">
      <p>
        <% if @lesson.testing? %>
          <%= render "do_test" %>
        <% else %>
          <%= render "lesson_result" %>
        <% end %>
      </p>
    </div>
  </div>
</div>
