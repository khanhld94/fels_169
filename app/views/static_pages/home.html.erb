<% provide :title, t("static_pages.title") %>
<% if user_signed_in? %>
  <aside>
    <div class="col-md-8 home-content">
      <h1><%= t :lesson %></h1>
      <table class="table table-bordered table-hover">
        <thead class="thead-default">
          <tr>
            <th><%= t :created_at %></th>
            <th><%= t "category.category" %></th>
            <th><%= t :status %></th>
            <th><%= t :word %></th>
            <th><%= t :action %></th>
          </tr>
        </thead>
        <tbody>
          <%= render "shared/index_lesson", lessons: @lessons %>
          <%= paginate @lessons %>
        </tbody>
      </table>
    </div>
  </aside>
  <aside>
    <div class="col-md-4 activity">
      <h1><%= t :recent_activities %></h1>
      <%= render_activities @activities %>
    </div>
  </aside>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "static_pages.home.signup" %></h1>
    <%= link_to t(:sign_up_now), new_user_registration_path,
      class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
